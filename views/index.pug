doctype html
html(lang="en")
  head
    style
      include ../bootstrap.min.css
      include ../styles.css
    title Pitskun Lounas
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    h1(class='center') Pitskun Lounas
    div
      div(class='table-responsive')
        table(class='table')
          thead(class='thead-dark')
            tr
              th
              each item in courses
                th(scope='col')= item
          each item in dayData
            tbody
              if item.isFirst
                tr
                  th(colspan='6' class='table-primary center')= ('Viikko ' + item.week)
              th= (item.day + " " + item.dayNum)
              each i in item.meals
                - if (i.includes('Kievin kana'))
                  td(class='kana')
                    div(class='rainbow_text_animated')= i
                - else
                  td= i
      div(class='topRight')
        a(href='https://github.com/MikkoKarvonen/pitskun-lounas2020' target='_blank') 
          button(type='button' class='btn btn-link btn-lg') { }